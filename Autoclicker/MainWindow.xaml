<Window x:Class="Autoclicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autoclicker" Height="220" Width="180"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>

        <Button Name="ToggleBtn"
                Content="Toggle (F6)"
                HorizontalAlignment="Left"
                Margin="14,95,0,0"
                VerticalAlignment="Top"
                Width="66" Height="25" Grid.Row="1"
                Click="ToggleBtn_Pressed"/>

        <Slider Name="CpsSlider"
                HorizontalAlignment="Left"
                Margin="20,70,0,0"
                VerticalAlignment="Top"
                Width="120" Height="25"
                Grid.ColumnSpan="3" Grid.Row="1"
                Minimum="1" Maximum="20"
                Value="10"
                IsSnapToTickEnabled="True"
                TickFrequency="1"
                ValueChanged="CpsSlider_ValueChanged"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,70,0,0"
                   Text="1" VerticalAlignment="Top" Width="10" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,70,0,0"
                   Text="20" VerticalAlignment="Top" Width="13" Grid.Column="2" Grid.Row="1"/>

        <TextBox TextAlignment="Center" FontSize="25"
                 HorizontalAlignment="Left" Margin="10,7,0,0"
                 VerticalAlignment="Top" Width="140" Height="40" Grid.ColumnSpan="3"
                 IsReadOnly="True"
                 Text="{Binding ElementName=CpsSlider, Path=Value, StringFormat={}{0} cps}"/>
        <TextBox Name="StatusText" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="OFF" VerticalAlignment="Top" Width="140" Height="37" TextAlignment="Center" FontSize="25" Grid.RowSpan="2"/>
        <Button Name ="Mouseclick_Button" Click="MouseButton_Switch"  Content="Left/Right" HorizontalAlignment="Left" Margin="0,95,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.205,0.196" Width="66" Grid.Column="1" Grid.ColumnSpan="2" Height="25"/>
        <TextBox Name="MouseButtonText" FontSize="25" TextAlignment="Center" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="10,27,0,0" Grid.Row="1" TextWrapping="Wrap" Text="LEFT" VerticalAlignment="Top" Width="140" Height="33"/>
    </Grid>
</Window>
